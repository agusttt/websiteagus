{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["dist/**", "node_modules/**", ".next/**"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": false,
        "rules": {
            "recommended": false,
            "style": {
                "useSingleVarDeclarator": "warn"
            },
            "complexity": {
                "noUselessCatch": "warn"
            }
        }
    }
}
